{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "*.test.tsx",
    "node_modules",
    "build"
  ]
}